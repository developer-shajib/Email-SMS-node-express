<body>
    

    <%- body  %> 

    <script src="//code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
   <script>
    $('.student_data_table').DataTable();

    const file_upload = document.getElementById('file_upload');
    const preload_student = document.querySelector('.preload_student');

  if(file_upload){
    file_upload.onchange =(e)=>{
        const imageLink = URL.createObjectURL(e.target.files[0]);
        preload_student.setAttribute('src',imageLink);
    }

  }
    const delete_btn = document.querySelectorAll('.delete_btn');
    if(delete_btn){
        delete_btn.forEach(data =>{
            data.onclick = (e) =>{
                const conf = confirm('Are you sure?');
                if(conf){
                    return true
                }else{
                    return false
                }
            }
        })
    }

   </script>

</body>
</html>