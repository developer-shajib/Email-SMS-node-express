<div class="container my-4 stu_form" >
    <div class="row">
        <div class="col-md-6 m-auto">
            <a class="btn btn-danger shadow mb-4" href="/student">Back</a>
            <div class="card shadow">
                <div class="card-header">
                    <h1>Create Student Form</h1>
                </div>
                <div class="card-body">
                    <form action="/student/create" method="post" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input  class="form-control" name="name" type="name">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input class="form-control" name="email" type="text">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input class="form-control" name="cell" type="name">
                        </div>
                        <div class="my-3">
                            <label for="">Gender</label>
                            <br>
                                <input type="radio" class="form-check-input" name="gender" id="" value="Male" checked> Male 
                                <br>
                                <input type="radio" class="form-check-input" name="gender" id="" value="Female">
                                Female
                            </div>
                        <div class="my-3">
                            <label for="">Location</label>
                            <select class="form-control" name="location" id="">
                                <option value="">-select-</option>
                                <option value="Dhaka">Dhaka</option>
                                <option value="cumilla">Cumilla</option>
                                <option value="sylhet">Sylhet</option>
                                <option value="dinajpur">Dinajpur</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <img class="preload_student mb-3" alt="">
                            <br>
                            <label for="file_upload">
                                <img class="upload_img" src="/images/images.png" alt="">
                            </label>
                            <input name="student_photo" id="file_upload"  type="file">
                        </div>
                        <div class="my-3">
                            <input class="btn btn-primary form-control" type="submit" value="Submit">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>